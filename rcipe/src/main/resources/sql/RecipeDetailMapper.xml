<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="RecipeDetailMapper">

	<resultMap type="com.rcipe.service.domain.RecipeDetail" id="RecipeDetailSelectMap">
		<result property="recipeDetailNo" column="DET_NO" jdbcType="INTEGER"/>
		<result property="recipeNo" column="rcp_no" jdbcType="INTEGER" />
		<result property="recipeOrder" column="det_rcp_ord" jdbcType="INTEGER" />
		<result property="detailImage" column="det_img_path" jdbcType="VARCHAR" />
		<result property="detailContents" column="det_cont" jdbcType="CLOB" />
	</resultMap>


	<select id="getRecipeDetail" parameterType="int"
		resultMap="RecipeDetailSelectMap">
		SELECT
		recipeDetailNo,rcp_no, det_rcp_ord, det_img_path, det_cont
		FROM
		detail_rcp
		WHERE rcp_no = #{value}
	</select>

	<delete id="deleteRecipeDetail" parameterType="int">
		DELETE FROM detail_rcp
		WHERE rcp_no=${value}
	</delete>

</mapper>